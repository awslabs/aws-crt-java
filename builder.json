{
    "name": "aws-crt-java",
    "packages": [
        "maven"
    ],
    "build_steps": [
        "mvn -B test"
    ],
    "test_steps": [],
    "hosts": {
        "ubuntu": {
            "packages": [
                "openjdk-8-jdk-headless"
            ],
            "build_env": {
                "JAVA_HOME": "/usr/lib/jvm/java-8-openjdk-amd64"
            }
        },
        "debian": {
            "packages": [
                "openjdk-8-jdk-headless"
            ]
        },
        "alpine": {
            "packages": [
                "openjdk8"
            ]
        }
    },
    "targets": {
        "linux": {
            "imports": ["libcrypto"],
            "!build_steps": [
                "mvn -B test -Dlibcrypto.path={libcrypto_path}"
            ],
            "architectures": {
                "armv6": {
                    "!build_steps": "mvn -B test -Dlibcrypto.path={libcrypto_path} -Dmaven.test.skip=1"
                },
                "armv7": {
                    "!build_steps": "mvn -B test -Dlibcrypto.path={libcrypto_path} -Dmaven.test.skip=1"
                }
            }
        }
    }
}