{
    "name": "aws-crt-java",
    "packages": [
        "maven"
    ],
    "build_steps": [
        "mvn -B compile"
    ],
    "test_steps": [
        "mvn -B test -DredirectTestOutputToFile=true -DforkCount=0 -DrerunFailingTestsCount=5"
    ],
    "imports": [
        "JDK8"
    ],
    "build_dir": "target/cmake-build",
    "build_env": {
        "JAVA_HOME": "{java_home}"
    },
    "test_env": {
        "JAVA_HOME": "{java_home}"
    },
    "hosts": {
        "ubuntu": {
            "packages": [
                "openjdk-8-jdk-headless"
            ]
        },
        "debian": {
            "packages": [
                "openjdk-8-jdk-headless"
            ]
        }
    },
    "targets": {
        "linux": {
            "!build_steps": [
                "{source_dir}/gradlew :s3-native-client:build -x test",
                "mvn -B compile"
            ],
            "!test_steps": [
                "mvn -B test -DforkCount=0 -DrerunFailingTestsCount=5"
            ],
            "architectures": {
                "armv6": {
                    "!packages": [],
                    "!build_steps": [
                        "build"
                    ],
                    "!test_steps": [],
                    "!cmake_args": [
                        "-DCMAKE_BUILD_TYPE=Release",
                        "-DBUILD_DEPS=ON",
                        "-DBUILD_TESTING=OFF"
                    ]
                },
                "armv7": {
                    "!packages": [],
                    "!build_steps": [
                        "build"
                    ],
                    "!test_steps": [],
                    "!cmake_args": [
                        "-DCMAKE_BUILD_TYPE=Release",
                        "-DBUILD_DEPS=ON",
                        "-DBUILD_TESTING=OFF"
                    ]
                },
                "arm64": {
                    "!packages": [],
                    "!build_steps": [
                        "build"
                    ],
                    "!test_steps": [],
                    "!cmake_args": [
                        "-DCMAKE_BUILD_TYPE=Release",
                        "-DBUILD_DEPS=ON",
                        "-DBUILD_TESTING=OFF"
                    ]
                }
            }
        },
        "android": {
            "imports": [
                "android-sdk"
            ],
            "build_env": {
                "ANDROID_SDK_ROOT": "{android_sdk_path}"
            },
            "!build_steps": [
                "{source_dir}/gradlew assemble"
            ],
            "architectures": {
                "armv7": {
                    "!packages": [],
                    "!build_steps": [
                        "build"
                    ],
                    "!test_steps": [],
                    "!cmake_args": [
                        "-DCMAKE_BUILD_TYPE=Release",
                        "-DBUILD_DEPS=ON",
                        "-DBUILD_TESTING=OFF"
                    ]
                },
                "arm64": {
                    "!packages": [],
                    "!build_steps": [
                        "build"
                    ],
                    "!test_steps": [],
                    "!cmake_args": [
                        "-DCMAKE_BUILD_TYPE=Release",
                        "-DBUILD_DEPS=ON",
                        "-DBUILD_TESTING=OFF"
                    ]
                }
            }
        },
        "freebsd": {
            "packages": [
                "openjdk8"
            ],
            "!build_env": {
                "JAVA_HOME": "/usr/local/openjdk8"
            },
            "!build_steps": [
                "mvn -B compile"
            ],
            "!test_steps": [
                "mvn -B test -DrerunFailingTestsCount=5"
            ]
        }
    }
}
