{
    "name": "aws-crt-java",
    "packages": [
        "maven"
    ],
    "build_steps": [
        "mvn -B test"
    ],
    "test_steps": [],
    "hosts": {
        "ubuntu": {
            "packages": [
                "openjdk-8-jdk-headless"
            ],
            "build_env": {
                "JAVA_HOME": "/usr/lib/jvm/java-8-openjdk-amd64"
            }
        },
        "raspbian": {
            "packages": [
                "openjdk-8-jdk-headless"
            ]
        },
        "alpine": {
            "packages": [
                "openjdk8"
            ]
        }
    },
    "targets": {
        "linux": {
            "variables": {
                "openssl_path": "/opt/openssl"
            },
            "!build_steps": [
                "mvn -B test -Dlibcrypto.path={openssl_path}"
            ]
        }
    }
}