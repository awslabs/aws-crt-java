{
    "name": "aws-crt-java",
    "packages": [
        "maven"
    ],
    "build_steps": [
        "mvn -B test"
    ],
    "hosts": {
        "ubuntu": {
            "packages": [
                "openjdk-8-jdk-headless"
            ],
            "build_env": {
                "JAVA_HOME": "/usr/lib/jvm/java-8-openjdk-amd64"
            }
        },
        "alpine": {
            "packages": [
                "openjdk8"
            ],
            "build_env": {
                "JAVA_HOME": "/usr/lib/jvm/java-1.8-openjdk"
            }
        }
    },
    "targets": {
        "linux": {
            "variables": {
                "openssl_path": "/opt/openssl"
            },
            "!build_steps": [
                [
                    "mvn",
                    "-B",
                    "test",
                    "-Dlibcrypto.path={openssl_path}"
                ]
            ]
        }
    }
}