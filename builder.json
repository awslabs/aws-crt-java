{
    "name": "aws-crt-java",
    "packages": [
        "maven"
    ],
    "build_steps": [
        "mvn -B compile"
    ],
    "test_steps": [
        "mvn -B test"
    ],
    "imports": [
        "JDK8"
    ],
    "build_dir": "target/cmake-build",
    "build_env": {
        "JAVA_HOME": "{java_home}"
    },
    "hosts": {
        "ubuntu": {
            "packages": [
                "openjdk-8-jdk-headless"
            ]
        },
        "debian": {
            "packages": [
                "openjdk-8-jdk-headless"
            ]
        }
    },
    "targets": {
        "linux": {
            "imports": [
                "s2n"
            ],
            "!build_steps": [
                "mvn -B compile -Dlibcrypto.path={libcrypto_path}"
            ],
            "!test_steps": [
                "mvn -B test -Dlibcrypto.path={libcrypto_path}"
            ],
            "architectures": {
                "armv6": {
                    "pkg_setup": [
                        "service docker start"
                    ],
                    "!packages": [],
                    "!build_steps": [
                        "build"
                    ],
                    "!test_steps": [],
                    "!cmake_args": [
                        "-DCMAKE_BUILD_TYPE=Release",
                        "-DBUILD_DEPS=ON",
                        "-DBUILD_TESTING=OFF",
                        "-DS2N_NO_PQ_ASM=ON"
                    ]
                },
                "armv7": {
                    "pkg_setup": [
                        "service docker start"
                    ],
                    "!packages": [],
                    "!build_steps": [
                        "build"
                    ],
                    "!test_steps": [],
                    "!cmake_args": [
                        "-DCMAKE_BUILD_TYPE=Release",
                        "-DBUILD_DEPS=ON",
                        "-DBUILD_TESTING=OFF",
                        "-DS2N_NO_PQ_ASM=ON"
                    ]
                },
                "arm64": {
                    "pkg_setup": [
                        "service docker start"
                    ],
                    "!packages": [],
                    "!build_steps": [
                        "build"
                    ],
                    "!test_steps": [],
                    "!cmake_args": [
                        "-DCMAKE_BUILD_TYPE=Release",
                        "-DBUILD_DEPS=ON",
                        "-DBUILD_TESTING=OFF",
                        "-DS2N_NO_PQ_ASM=ON"
                    ]
                }
            }
        },
        "freebsd": {
            "imports": [
                "s2n"
            ],
            "packages": [
                "openjdk8"
            ],
            "!build_env": {
                "JAVA_HOME": "/usr/local/openjdk8"
            }
        }
    }
}